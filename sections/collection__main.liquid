    margin-left: 0 !important;
  }
  .bsp-prod-head{
    text-align:left;
  }
  .flex-space-between {
    display: flex;
    flex-direction: column;
  }
  .container.border-top-padding {
    display: flex;
    justify-content: space-between;
  }
  #col-bsp-titles > div > a {
    display: flex;
    justify-content: space-between;
    padding-bottom: 0.5rem;
    align-items: center;
    color: #6b6b6b;
    width:100%;
  }
