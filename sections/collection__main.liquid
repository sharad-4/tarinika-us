{% style %}
  #shopify-section-{{ id }} {
    padding-top: {{ padding_top }}px;
    padding-bottom: {{ padding_bottom }}px;
    {% if width == 'wide' %}
      width: 95%;
    {% endif %}
  }
  .container.container--pagination {
    padding: 2rem 0 4rem;
}
  .container.container--pagination.pagination--description {
    padding-bottom: 0 !important;
  }
  .button-style .paginate {
    padding-bottom: 4rem;
  }

  .collection__description {
    width: 100%;
    margin: auto;
    text-align:left;
}
  .border-top-padding{
    padding-top:2rem;
    border-top:1px solid #d9d9d9;
  }
  .content h2, .shopify-policy__body h2, h3 {
    margin-bottom: 0.5714em;
    word-wrap: break-word;
}
  h3{
    font-size:1.8rem!important;
  }
  h2#Filtertext {
    font-size: 1.5rem!important;
    font-weight: 400;
}
  .sidebar-block__heading{
    font-size: 1.3rem!important;
    font-weight: 400;
    font-family: 'Canela'!important;
    
  }
.has-padding-bottom {
    padding-bottom: 30px;
}
  h3{
    line-height:2rem!important;
  }
  .collection__description h1 {
    display: none;
  }

  .sidebar-section {
    {% if section.settings.sidebar_position == 'right' %}
      order: 1;
    {% endif %}
  }

  {% if section.settings.collection_breadcrumb == false %}
    .breadcrumb__container {
      display: none;
    }
  {% endif %}

  {% if section.settings.pagination_type != 'basic_pagination' %}
    .breadcrumb__page-count {
      display: none;
    }
  {% endif %}

  {% if section.settings.collection_tags == false %}
    .collection__tag-filter {
      display: none;
    }
  {% endif %}

  {% if section.settings.collection_sort == false %}
    .collection__sort-by-filter {
      display: none;
    }
  {% endif %}

  {% render 'css-loop',
          css: custom_css,
          id: id
  %}
section.footer__extra-content.section {
    width: 95%!important;
    max-width: unset;
}


{% comment %}   Products Interlinking {% endcomment %}
  .product_type_description,
