  #col-bsp-titles > div > a > .productprice {
    width: 20%;
    text-align: right;
  }
  #col-bsp-titles > div > a:hover {
    text-shadow: 1px 0 0 #000;
  }
  #row-popular-search a:hover {
    text-shadow: 1px 0 0 #000;
  }
  .popular_search {
      padding-top: 2rem;
      border-top: 1px solid #d9d9d9;
  }
  .collection__description h2,
  .collection__description h3,
  .collection__description h4,
  .collection__description p,
  .collection__description ol {
    color: #6b6b6b;
  }
  #row-popular-search a {
    color: #6b6b6b;
  }

  @media screen and (max-width: 1024px) {
    .container.border-top-padding {
      display: flex;
      flex-direction: column;
    }
    .popular_search_bestselling {
      flex-direction: column-reverse !important;
    }
    .product_type_description,
    .popular__search,
    .bestselling_products {
      width: 100%;
    }
    .bestselling_products h2,
    .collection__description ul {
      margin-left: 0rem;
    }
    .container.popular-searches,
    .container.border-top-padding {
      width: 95%;
      margin: 0 auto;
    }
