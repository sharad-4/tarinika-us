{% style %}
    .animated {animation-duration: 0s!important;}  
{% endstyle %}
<div class="search-overlay animated fadeIn overlay2" data-search-type="overlay">
  <section class="section search-overlay__wrapper overlay__wrapper2">
    <div class="container">
      <div class="one-whole column" data-autocomplete-{{ settings.enable_autocomplete }}>
        <form id="newSearch" class="search-form search-popup__form" action="{{ routes.search_url }}">
          <div class="search__fields">
            <input type="hidden" name="type" value="{{ settings.search_option }}" />
            <label for="q" class="visuallyhidden">{{ settings.search_placeholder }}</label>
            <div class="field">
              <div class="control has-icons-left">
                <input class="input" id="q1" type="text" name="q" placeholder="{{ settings.search_placeholder }}" value="{{ search.terms }}" x-webkit-speech autocapitalize="off" autocomplete="off" autocorrect="off" />
                {% render 'icon',
                        name: 'search',
                        class: 'icon is-left'
                %}
                <div id="closeSearch">

    {% render 'icon',
                        name: 'xclose',
                        class: 'icon is-right'
                %}
</div>
              </div>
            </div>
            <input type="submit" name="search" class="visuallyhidden" value="" />
          </div>
        </form>
      </div>

      {% if settings.search_menu != blank %}
        {% assign search_menu = linklists[settings.search_menu] %}
        <div class="one-whole column text-align-center">
          <div class="search-menu">
            <span>{{ 'general.search.common_terms' | t }}:</span>
            <ul class="search-menu__list">
              {% for link in search_menu.links %}
                <li class="search-menu__item">
                  <a class="{% if link.active %}is-active{% endif %}" href="{{ link.url }}">
                    {{ link.title }}
                  </a>
                </li>
              {% endfor %}
            </ul>
          </div>
        </div>
      {% endif %}

    </div>
  </section>
</div>
<style>

    
</style>

<script>
$("#closeSearch").click(function(){
  $(".overlay2").removeClass("is-opened");
});
</script> 